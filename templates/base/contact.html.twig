{% extends 'base.html.twig' %}



{% block title %}Contact{% endblock %}





{% block body %}



<!--Section: Contact v.2-->

<main class="main-contact" id="stick-footer">

    {{ form_start(contactForm) }}

    <div class="mb-3 mt-5" id="container-contact">

        <h1 class="mb-5">Contact</h1>

        <div class="row">

            <div class="col-md-9 mb-md-0 mb-5">

                <div class="row">

                    <div class="col-md-6 mobile-margin">

                        <div class="md-form mb-0">

                            <label for="contact_form_prenom">Pr√©nom</label>

                            {{ form_widget(contactForm.prenom) }}

                            {{ form_errors(contactForm.prenom) }}

                        </div>

                    </div>

                    <div class="col-md-6 mobile-margin">

                        <div class="md-form mb-0">

                            <label for="contact_form_nom">Nom</label>

                            {{ form_widget(contactForm.nom) }}

                            {{ form_errors(contactForm.nom) }}



                        </div>

                    </div>

                </div>

                <div class="row margin-contact">

                    <div class="col-md-6 mobile-margin">

                        <div class="md-form mb-0">

                            <label for="contact_form_email">Email<span class="asterisque1">*</span></label>

                            {{ form_widget(contactForm.email) }}

                            {{ form_errors(contactForm.email) }}

                        </div>

                    </div>

                    <div class="col-md-6 mobile-margin">

                        <div class="md-form mb-0">

                            <label for="contact_form_telephone">Telephone</label>

                            {{ form_widget(contactForm.telephone) }}

                            {{ form_errors(contactForm.telephone) }}

                        </div>

                    </div>

                </div>

                <div class="row margin-contact">

                    <div class="col-md-12 mobile-margin">

                        <div class="md-form mb-0">

                            <label for="contact_form_objet">Objet<span class="asterisque1">*</span></label>

                            {{ form_widget(contactForm.objet) }}

                            {{ form_errors(contactForm.objet) }}

                        </div>

                    </div>

                </div>

                <div class="row margin-contact">

                    <div class="col-md-12">

                        <div class="md-form">

                            <label for="contact_form_message">Message<span class="asterisque1">*</span></label>

                            {{ form_widget(contactForm.message) }}

                            {{ form_errors(contactForm.message) }}

                        </div>

                    </div>

                </div>

                <br>

                <br>

                <div class="text-center text-md-left">

                    {{ form_widget(contactForm.submit) }}

                </div>

            </div>



            <div class="col-md-3 text-center" id="position">

                <ul class="list-unstyled mb-0">

                    <li>

                        <i class="fas fa-map-marker-alt fa-2x"></i>

                        <p>Bondy, 93140, France</p>

                    </li>



                    <li>

                        <i class="fas fa-phone mt-4 fa-2x"></i>

                        <p>07 69 83 11 85</p>

                    </li>



                    <li>

                        <i class="fas fa-envelope mt-4 fa-2x"></i>

                        <p>lastlifeblog@gmail.com</p>

                    </li>

                </ul>

            </div>

        </div>

    </div>

    {{ form_end(contactForm) }}

</main>

{% endblock %}