{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<main id="stick-footer">
    <div class="container col-11 col-md-6 text-light">
        <h1 class="mb-3 text-center" id="ResetPwdh1">Réinitialisation du mot de passe</h1>
        <form method="post">
            <label for="inputPassword" class="mt-4">Veuillez indiquer votre nouveau mot de passe :</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
            <input type="hidden" name="token" value="{{ token }}">
            <input id="bouton_envoi-connection" type="submit" class="mt-3" value="Réinitialiser">
        </form>
    </div>
</main>
{% endblock %}