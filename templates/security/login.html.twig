{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<main id="stick-footer">
        {% for label, messages in app.flashes %}
            <div class="container" id="container_login">
                <div class="alert alert-{{ label }}">
                    {% for message in messages %}
                        <p class="mt-5">{{ message }}</p>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}

    <form id="connexion" method="post" action="{{ path('login') }}">
        <div class="container text-light mt-5">
            <h1 class="mb-2 mb-md-5 mx-auto text-center" id="header-connect">Connexion</h1>
            <div class="form-group">
                <label for="pseudo">Pseudo</label><br>
                <input type="text" id="pseudo" name="_username" value="{{ lastUsername }}" class="form-control">
            </div>

                <label for="mdp" class="mt-4">Mot de passe</label><br>
                <div id="mdp-eye" class="form-group">
                    <input id="mdp" name="_password" type="password" class="form-control">
                    <i class="fa fa-eye" id="eye"></i>
                </div>

                <input id="bouton_envoi-connection" type="submit" class="mt-3" value="Se connecter">
                <div class="mx-auto text-center mt-3"><a href="{{ path('register') }}" id="register-redirect">Pas encore inscris ? Par ici !</a></div>
                <div class="mx-auto text-center mt-3"><a href="{{ path('app_forgotten_password') }}" id="forgotten-password-redirect" class="text-light">Mot de passe oubli√© ?</a></div>

        </div>
    </form>
</main>
<script src="{{ asset('js/javascript_login.js') }}"></script>
{% endblock %}