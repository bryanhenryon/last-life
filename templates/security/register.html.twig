<body id="register-body">
    <div class="formulaire">
        {{ form_start(formMembre) }}
        <div class="form-header">
            <a href="{{ path('homepage' )}}" id="register_backToIndex"><i class="fas fa-arrow-left"></i></a>
            <span>Inscription</span>
        </div>

        <div class="prenom-nom">
