                <label for="membre_confirm_password">Confirmation du mot de passe<span class="asterisque3">*</span></label><br>
                {{ form_widget(formMembre.confirm_password) }}
                {{ form_errors(formMembre.confirm_password) }}
            </div>

            <div class="parent-inscription">
                <div class="inscription">
                {{ form_widget(formMembre.submit) }}
                </div>
            </div>

            <div id="se-connecter">
                <p><a href="{{ path('login') }}">Déjà membre ? Se connecter</a></p>
            </div>
        </div>
        {{ form_end(formMembre) }}
