{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<main id="stick-footer">
    <div class="container col-11 col-md-6 text-light" id="ForgottenPwdContainer">
        <h1 class="text-center" id="ForgottenPwdh1">Mot de passe oublié</h1>
        <form method="post">
            <label for="inputEmail" class="mt-4">Veuillez indiquer l'adresse email liée à votre compte :</label>
            <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email">
            <input id="bouton_envoi-connection" type="submit" class="mt-3" value="Envoyer">
        </form>
    </div>
</main>
{% endblock %}