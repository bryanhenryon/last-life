{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}

<div class="container col-11 col-md-6 mx-auto text-light mt-5" id="stick-footer">
    <h1 id="header-pwd-update">Modification du mot de passe</h1>
    {% for label, messages in app.flashes %}
        <div class="container">
            <div class="alert alert-{{ label }}">
                {% for message in messages %}
                <p>{{ message }}</p>
                {% endfor %}
            </div>
        </div>
    {% endfor %} 
    {{ form_start(form) }}
    <div class="form-group">
        <label for="password_update_oldPassword" class="mt-2">Mot de passe actuel<span class="asterisque1">*</span></label><br>
        {{ form_widget(form.oldPassword) }}
        {{ form_errors(form.oldPassword) }}
    </div>
    <div class="form-group">
        <label for="password_update_newPassword" class="mt-2">Nouveau mot de passe<span class="asterisque1">*</span></label><br>
        {{ form_widget(form.newPassword) }}
        {{ form_errors(form.newPassword) }}
    </div>
    <div class="form-group">
        <label for="password_update_confirmPassword" class="mt-2">Confirmation du nouveau mot de passe<span class="asterisque1">*</span></label><br>
        {{ form_widget(form.confirmPassword) }}
        {{ form_errors(form.confirmPassword) }}
    </div>
    <button type="submit" class="btn btn-danger mb-5">Modifier le mot de passe</button>
    {{ form_end(form) }}
</div>
{% endblock %}